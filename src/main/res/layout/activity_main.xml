<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <com.example.administrator.my.CustomTitleView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:my_text="3712"
        custom:my_text_size="40sp"
        custom:my_text_color="#ff0000"
        />


    <com.example.administrator.my.CustomImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        custom:civImage="@mipmap/ic_launcher"
        custom:civTitleText="hello android ! "
        custom:civTitleTextColor="#ff0000"
        custom:civImageScaleType="center"
        custom:civTitleTextSize="30sp"
        />

    <com.example.administrator.my.CustomImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        custom:civImage="@mipmap/ic_launcher"
        custom:civImageScaleType="center"
        custom:civTitleText="helloworldwelcome"
        custom:civTitleTextColor="#ff0000"
        custom:civTitleTextSize="20sp"
        />

    <com.example.administrator.my.CustomImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        custom:civImage="@mipmap/ic_launcher"
        custom:civImageScaleType="center"
        custom:civTitleText="妹子~"
        custom:civTitleTextColor="#ff0000"
        custom:civTitleTextSize="12dp"
        />






</LinearLayout>























